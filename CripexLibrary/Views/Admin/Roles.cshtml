@model IEnumerable<CripexLibrary.Models.ApplicationRole>

@{
	ViewData["Title"] = "Roles";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="pagetitle">
	<h1>Roles</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a>Home</a></li>
			<li class="breadcrumb-item">Dashboard</li>
			<li class="breadcrumb-item active text-primary">Roles</li>
		</ol>
	</nav>
</div><!-- End Page Title -->
<section class="section dashboard">
	<div class="row">
			<p>
				<a asp-action="AddRole" class="badge bg-success" >Add New Role</a>
			</p>
			<table class="table">
				<thead>
					<tr>
						<th>
							Description
						</th>
						<th>
							Name
						</th>
						
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@item.Description
							</td>
							<td>
								@item.Name
							</td>
							
							<td>
							<a asp-action="EditRole" class="badge bg-success" asp-route-id="@item.Id"><i class="bi bi-pencil-square"> Edit</i></a> |
							@*<a asp-action="Details" class="badge bg-info" asp-route-id="@item.Id"><i class="bi bi-clipboard-plus"> Details</i></a> |*@
							<a asp-action="DeleteRole" class="badge bg-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this member?')"><i class="bi bi-trash3"> Delete</i></a>
							</td>
						</tr>
					}
				</tbody>
			</table>

		</div>
</section>