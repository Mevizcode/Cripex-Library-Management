@model CripexLibrary.Models.ViewModels.LibraryViewModel<BookPublisher>
@{
	ViewData["Title"] = "Publisher";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="pagetitle">
	<h1>Publisher</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a>Home</a></li>
			<li class="breadcrumb-item">Dashboard</li>
			<li class="breadcrumb-item active text-primary">Publisher</li>
		</ol>
	</nav>
</div><!-- End Page Title -->
<section class="section dashboard">
	<p>
		<a asp-action="AddPublisher" class="badge bg-primary">Add Publisher</a>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					Publisher Name
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Items)
			{
				<tr>
					<td>
						@item.PublisherName
					</td>
					<td>
						<a asp-action="EditPublisher" class="badge bg-success" asp-route-id="@item.Id"><i class="bi bi-pencil-square"> Edit</i></a> |
						<a asp-action="PublisherDetails" class="badge bg-info" asp-route-id="@item.Id"><i class="bi bi-clipboard-plus"> Details</i></a> |
						<a asp-action="DeletePublisher" class="badge bg-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this publisher?')"><i class="bi bi-trash3"> Delete</i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<partial name="_Pagination" model="@Model.Pagination" />
	<br />
	<br />
	<br />
</section>