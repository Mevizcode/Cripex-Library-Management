@model CripexLibrary.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="pagetitle">
    <h1>New Book</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a>Home</a></li>
            <li class="breadcrumb-item">Dashboard</li>
            <li class="breadcrumb-item active">New Book</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section dashboard">
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBook" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookTitle" class="control-label"></label>
                <input asp-for="BookTitle" class="form-control" />
                <span asp-validation-for="BookTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookDescription" class="control-label"></label>
                <textarea asp-for="BookDescription" class="form-control"></textarea>
                <span asp-validation-for="BookDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookImg" class="control-label"></label>
                <input asp-for="BookImg" class="form-control" name="bookImg" type="file"  /> @* onchange="previewImage(event)"*@
@*                <img id="preview" src="#" class="img-thumbnail" alt="Preview"/>
*@                <span asp-validation-for="BookImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookCopies" class="control-label"></label>
                <input asp-for="BookCopies" class="form-control" type="number" required/>
                <span asp-validation-for="BookCopies" class="text-danger"></span>
            </div>
          <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.CategoryName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control">
                    @foreach (var author in ViewBag.Author)
                    {
                        <option value="@author.Id" >@author.AuthorName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PublisherId" class="control-label"></label>
                <select asp-for="PublisherId" name="PublisherId" class="form-control">
                    @foreach (var publisher in ViewBag.Publisher)
                    {
                        <option value="@publisher.Id">@publisher.PublisherName</option>
                    }
                </select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Add Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
