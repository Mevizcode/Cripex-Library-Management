@model Book

@{
    ViewData["Title"] = "Edit Book";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="pagetitle">
    <h1>Edit Book</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a>Home</a></li>
            <li class="breadcrumb-item">Dashboard</li>
            <li class="breadcrumb-item active">Edit Book</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBook" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BookTitle" class="control-label"></label>
                <input asp-for="BookTitle" class="form-control" />
                <span asp-validation-for="BookTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookDescription" class="control-label"></label>
                <textarea asp-for="BookDescription" class="form-control"></textarea>
                <span asp-validation-for="BookDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookImg" class="control-label"></label>
                <input asp-for="BookImg" class="form-control" name="bookImg" type="file" />
                <span asp-validation-for="BookImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label">Author Name</label>
                <select asp-for="AuthorId" name="authorId" class="form-control">
                    @foreach (var author in ViewBag.Authors)
                    {
                        <option value="@author.Id">@author.AuthorName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PublisherId" class="control-label">Publisher Name</label>
                <select asp-for="PublisherId" name="publisherId" class="form-control">
                    @foreach (var publisher in ViewBag.Publishers)
                    {
                        <option value="@publisher.Id">@publisher.PublisherName</option>
                    }
                </select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<br />
<br />
</section>