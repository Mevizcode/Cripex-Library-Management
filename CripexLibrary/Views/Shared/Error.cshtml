@model CripexLibrary.Models.ViewModels.ErrorViewModel
@{
	ViewData["Title"] = "Error";
}
<main id="main" class="container-fluid">
	<section id="popular-courses" class="courses">
		<div class="container" data-aos="fade-up">

			<div class="section-title">
				<h2>Error</h2>
			</div>
			<h4 class="text-center">Error @Model.ErrorCode</h4>
			<p>@*There was an error processing your request. Please try again later.*@ <br />
				<strong class="text-danger">Error Message: @Model.ErrorMessage</strong>
			</p>
			

			@*@if (Model.ShowRequestId)
			{
				<p>
					<strong>Request ID:</strong> <code>@Model.RequestId</code>
				</p>
			}*@
			<a href="javascript:history.back()">Go Back</a>
		</div>
	</section>
</main>


