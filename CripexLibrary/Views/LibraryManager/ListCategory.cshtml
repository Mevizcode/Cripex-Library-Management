@model CripexLibrary.Models.ViewModels.LibraryViewModel<Category>

@{
	ViewData["Title"] = "Category";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="pagetitle">
	<h1>Category</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a>Home</a></li>
			<li class="breadcrumb-item">Dashboard</li>
			<li class="breadcrumb-item active text-primary">Category</li>
		</ol>
	</nav>
</div><!-- End Page Title -->
<section class="section dashboard">
	@*<div class="row d-flex">*@
		
			<p>
				<a asp-action="AddCategory" class="badge bg-primary">Add Category</a>
			</p>
		
		
			@*<div class="search-bar">
				<form class="search-form d-flex align-items-center">
					<input type="text" name="query" placeholder="Search" title="Enter search keyword">
					<button type="submit" title="Search"><i class="bi bi-search"></i></button>
				</form>
			</div><!-- End Search Bar -->*@
		
@*	</div>*@
	
	<table class="table">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Items)
			{
				<tr>
					<td>
						@item.CategoryName
					</td>
					<td>
						<a asp-action="EditCategory" class="badge bg-success" asp-route-id="@item.Id"><i class="bi bi-pencil-square"> Edit</i></a> |
						<a asp-action="CategoryDetails" class="badge bg-info" asp-route-id="@item.Id"><i class="bi bi-clipboard-plus"> Details</i></a> |
						<a asp-action="DeleteCategory" class="badge bg-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this category?')"><i class="bi bi-trash3"> Delete</i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<partial name="_Pagination" model="@Model.Pagination" />
	<br />
	<br />
	<br />
</section>