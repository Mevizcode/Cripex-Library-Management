@model CripexLibrary.Models.ViewModels.LibraryViewModel<Author>
@{
	ViewData["Title"] = "Authors";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="pagetitle">
	<h1>Authors</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a>Home</a></li>
			<li class="breadcrumb-item">Dashboard</li>
			<li class="breadcrumb-item active text-primary">Authors</li>
		</ol>
	</nav>
</div>
<section class="section dashboard">
	<p>
		<a asp-action="AddAuthor" class="badge bg-primary">Add Author</a>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					Author
				</th>
				<th>
					Biography
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Items)
			{
				<tr>
					<td>
						@item.AuthorName
					</td>
					<td>
						@item.Biography
					</td>
					<td>
						<a asp-action="EditAuthor" class="badge bg-success" asp-route-id="@item.Id"><i class="bi bi-pencil-square"> Edit</i></a> |
						<a asp-action="AuthorDetail" class="badge bg-info" asp-route-id="@item.Id"><i class="bi bi-clipboard-plus"> Details</i></a> |
						<a asp-action="DeleteAuthor" class="badge bg-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this author?')"><i class="bi bi-trash3"> Delete</i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<partial name="_Pagination" model="@Model.Pagination" />
	<br />
	<br />
	<br />
</section>